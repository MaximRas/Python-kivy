#:kivy 2.1.0
<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    #on_press: self.background_color = (0.0, 0.2, 0.4, 1.0)

    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1) if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]

